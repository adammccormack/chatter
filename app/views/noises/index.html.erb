  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css">
  </head>

  <% if @user %>
    <h1>Welcome, <%= @user.email %></h1>
  <% end %>
  
  <section class="section">
  
    <h1 class="title">Chatter</h1><br></h1>
        <%= form_with model: @noise do |f| %>
        <div class="field">
          <div class="control">
            <%= f.text_field :content, class: 'input' %>
          </div>
        </div>
        <%= f.submit 'Submit', class: 'button is-primary' %>
      <% end %>
          <div class="mb-6">
          </div>
          <h1 class="is-size-3 has-text-weight-medium mb-2"> Noises </h1>

      <table>
        <tbody>
          <% @noises.each do |noise| %>
            <tr>
              <td class="td-content"><%= noise.content %></td>
              <td><%= noise.created_at.strftime("%-I:%S %P %d %b %Y") %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </section>
